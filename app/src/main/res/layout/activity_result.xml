<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-32dp"
        tools:layout_editor_absoluteY="115dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/result_database"
                android:layout_width="match_parent"
                android:layout_height="368dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorLight"
                android:text=" Proszę poczekać na połączenie z bazą"
                android:textSize="18sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btn_addAc"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:background="@color/colorLight"
                android:hint="@string/add_button"
                android:textColorHint="@color/colorButton"
                android:textSize="18sp" />

            <Button
                android:id="@+id/menu_btn"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:background="@color/colorLight"
                android:hint="@string/menu_button"
                android:textColorHint="@color/colorButton"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>